<view class="r-wrap">
  <view class="image">
    <image src="{{topImage}}"></image>
    <view></view>
  </view>
  <view class="recognitionArea">
    <view class="share_wrap">
      <view class="top" bindtap="startPhoto">
        <image src="{{photo}}"></image>
        <view>拍照/选图</view>
      </view>
