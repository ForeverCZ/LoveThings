page {
  background: rgb(221, 222, 227);
}

.image {
  position: relative;
}

.image image {
  width: 100%;
  height: 450rpx;
}

.image view {
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0));
}

.share_wrap {
  margin-top: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top {
  color: #fff;
  font-size: 35rpx;
  background: rgb(233, 70, 10);
  width: 50%;
  justify-content: center;
  padding: 5rpx 5rpx;
  display: flex;
  align-items: center;
  border-radius: 40rpx;
}

.top image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 15rpx;
}

.bottom {
  margin-top: 100rpx;
  color: #000;
  font-size: 32rpx;
  justify-content: center;
  display: flex;
  align-items: center;
}

.bottom image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}

.recognitionArea button {
  background: transparent;
  width: 50%;
}

button::after {
  border: none;
}
