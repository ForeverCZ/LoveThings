page {
  padding: 0 20rpx;
}

.itemList {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  position: relative;
  margin-top: 10rpx;
  width: 350rpx;
  height: 175rpx;
  border-radius: 10rpx;
  /* background: rgb(240, 253, 234); */
}

.item_top {
  position: relative;
  width: 100%;
  height: 130rpx;
}

.item_top .text {
  position: absolute;
  top: 55rpx;
  left: 20rpx;
  font-size: 30rpx;
  /* color: rgb(70, 226, 96); */
}

.bottom text {
  position: absolute;
  left: 20rpx;
  bottom: 25rpx;
  font-size: 25rpx;
  /* color: rgb(170, 248, 160); */
}

.item_top image {
  position: absolute;
  top: 8rpx;
  right: 10rpx;
  width: 100rpx;
  height: 100rpx;
}

.bottom {
  position: relative;
  width: 100%;
  height: 45rpx;
}

.show {
  border-radius: 10rpx;
  z-index: 5;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.show text {
  color: white;
}

/* 客服组件 */

.kfzj {
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
}

.kfzj button {
  background: transparent;
  width: 80rpx;
  height: 80rpx;
  position: relative;
  margin: 0;
  padding: 0;
  box-sizing: content-box;
}

.kfzj button::after {
  border: none;
}

.kfzj image {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
