.textarea-wrap textarea{
  padding: 20rpx 40rpx 10rpx 40rpx;
}
.tool-wrap{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 40rpx 30rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tool-wrap view text{
  color: rgb(175, 175, 175);
}
.tool-wrap view image{
  width: 40rpx;
  height: 40rpx;
}
.toTop{
  position: fixed;
  bottom: 50%;
  left: 0;
  right: 0;
}